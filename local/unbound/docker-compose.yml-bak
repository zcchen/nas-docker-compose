version: "3.5"

services:
  unbound:
    image: mvance/unbound
    restart: unless-stopped
    ports:
      - 53:53/tcp
      - 53:53/udp
    volumes:
      # TODO: This docker image will genenerate the unbound.conf in this folder,
      # but I want to have one folder entrance to be included.
      # So that I can keep updating without purging my personal configs.
      - ./unbound/config/:/opt/unbound/etc/unbound/:ro
    networks:
      - front-end

